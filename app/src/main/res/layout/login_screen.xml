<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_yum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="149dp"
        android:contentDescription="@string/todo"
        android:scaleX="3.3"
        android:scaleY="3.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_yum_logo" />

    <Button
        android:id="@+id/phone_login_btn"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="@dimen/_66sdp"
        android:background="@drawable/custom_rounded_corners"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/login_with_phone_number"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/fb_login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fb_login_btn"
        android:layout_width="236dp"
        android:layout_height="61dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/custom_rounded_corners_fb"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/login_with_facebook"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>